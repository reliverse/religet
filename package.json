{
  "name": "religet-cli",
  "version": "0.1.0",
  "type": "module",
  "description": "üèπ @reliverse/religet (https://github.com/reliverse/religet) is a modern alternative to giget/gegit. üîú Coming soon: a full-featured download library, CLI, browser extension, embedded website downloads (like mega), desktop app, and mobile app.",
  "scripts": {
    "dev": "bun main:dev",
    "pub": "bun main:pub",
    "agg": "bun main:agg",
    "latest": "bun update --latest && bun check",
    "check": "tsc --noEmit && eslint --cache --fix . && biome check --fix --unsafe . && knip-bun",
    "main:dev": "bun tsx src-main/main.ts ./examples/temp/1.torrent --out ./examples/temp/downloads",
    "main:agg": "relidler tools --tool agg --input src-main/libs/core/core-impl --out src-main/libs/core/core-main.ts --recursive --named --strip src-main/libs/core",
    "main:pub": "relidler",
    "tauri:dev": "vite",
    "tauri:tauri": "tauri",
    "tauri:preview": "vite preview",
    "tauri:build": "tsc && vite build",
    "tauri:debug": "bun run tauri dev"
  },
  "dependencies": {
    "@reliverse/rempts": "^1.6.2",
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-opener": "^2.2.6",
    "@types/fs-extra": "^11.0.4",
    "bencode": "^4.0.0",
    "fs-extra": "^11.3.0",
    "pathe": "^2.0.3",
    "pretty-bytes": "^6.1.1",
    "pretty-ms": "^9.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "webtorrent": "^2.6.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.25.1",
    "@reliverse/cli-cfg": "^1.6.5",
    "@reliverse/relidler-cfg": "^1.1.3",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@tauri-apps/cli": "^2.5.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bencode": "^2.0.4",
    "@types/node": "^22.15.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/webtorrent": "^0.110.0",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.1",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-perfectionist": "^4.12.3",
    "knip": "^5.50.5",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3"
  }
}
